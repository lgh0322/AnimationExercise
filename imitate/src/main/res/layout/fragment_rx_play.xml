<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/content"
        style="@style/margin_start_end_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/stop_all"
        style="@style/margin_start_end_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="stop_all"
        app:layout_constraintTop_toBottomOf="@id/content" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/stop_all" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/start1"
        style="@style/margin_start_end_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="custom_lifecycle"
        app:layout_constraintTop_toBottomOf="@id/line" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/start2"
        style="@style/margin_start_end_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="callable"
        app:layout_constraintTop_toBottomOf="@id/start1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/start3"
        style="@style/margin_start_end_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="interval"
        app:layout_constraintTop_toBottomOf="@id/start2" />

</androidx.constraintlayout.widget.ConstraintLayout>